<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="./styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Reddit+Mono:wght@200..900&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/arrow-line/dist/arrow-line.min.js"></script>
</head>

<body>
  <h1 id="st" style="text-align: center;">Database visualization</h1>
   <% let index = 0 %>

  <% fieldsArr.forEach(field=> { %>
    <table style="border: 1px solid red;">
        <thead>
          <tr style="border: 1px solid red;">
            <h2 id="end" class="table-name">
             <%= modelsArr[index].collection.collectionName %>
            </h2>
          </tr>
        </thead>
    
      <% const obj = Object.keys(field) %>
      <tr>
            <% obj.forEach(i=>{ %>
                <td>
                    <%= i %>
                </td>
                <td>
                    <%= modelsArr[index].schema.path(i).instance %>
                </td>
                
              <% if(field[i].required===true){ %>
                <td>
                  <button class="flag" style="background-color:rgb(146, 248, 143)">required</button>
                </td>
                <% } %>

              <% if(field[i].unique===true){ %>
                <td>
                  <button class="flag" style="background-color:rgb(79, 79, 253)">unique</button>
                </td>
                <% } %>
            </tr>
            <% }) %>

    </table>
    <br>
    <% index++ %>
    <% }) %>
      </div>

      <!-- <script>
        arrowLine('#p', '#q', { color: 'blue' });
        console.log("object")
      </script> -->
</body>

</html>